<%- include('partials/header') %>
<body>
  <%- include('partials/navbar') %>
  <div class="container">
    <hr />
    <h1>Perguntas</h1>
    <hr />
    <a href="/question" class="btn btn-success">Perguntar</a>
    <hr />
    <% questions.forEach(question => { %>
    <br />
    <div class="card question-card" style="margin-bottom: 20px">
      <div class="card-body">
        <h3><%= question.titulo %></h3>
      </div>
      <div class="card-footer">
        <a href="/pergunta/<%= question.id %>">
          <button class="btn btn-success">Responder</button>
        </a>
      </div>
    </div>
    <% }) %>
  </div>
</body>
<%- include('partials/footer') %>
